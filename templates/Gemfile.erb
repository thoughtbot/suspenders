source "https://rubygems.org"

ruby "<%= Suspenders::RUBY_VERSION %>"

gem "airbrake"
gem "autoprefixer-rails"
gem "bourbon", "~> 4.2.0"
gem "coffee-rails", "~> 4.1.0"
gem "delayed_job_active_record"
gem "flutie"
gem "high_voltage"
gem "jquery-rails"
gem "neat", "~> 1.7.0"
gem "newrelic_rpm", ">= 3.9.8"
gem "normalize-rails", "~> 3.0.0"
gem "pg"
gem "puma"
gem "rack-canonical-host"
gem "rails", "<%= Suspenders::RAILS_VERSION %>"
gem "recipient_interceptor"
gem "sass-rails", "~> 5.0"
gem "simple_form"
gem "title"
gem "uglifier"
gem 'slim-rails'                            # Slim support

group :development do
  gem "meta_request"    # Rails meta panel in chrome console. https://chrome.google.com/webstore/detail/railspanel/gjpfobpafnhjhbajcjgccbbdofdckggg
  gem "better_errors"   # Much more useful browser error message   
  gem "quiet_assets"
  gem "refills"
  gem "spring"
  gem "spring-commands-rspec"
  gem "web-console"
  gem 'guard'
  gem 'guard-livereload', '~> 2.4', require: false            # makes frontend developing more fun
  gem 'rails_db'        # DB viewer on http://localhost:3000/rails/db
  gem 'axlsx_rails'     # Addition for xls data export
end

group :development, :test do
  gem "awesome_print"
  gem "hirb"                #pretty tables   
  gem "bullet"
  gem "bundler-audit", require: false
  gem "dotenv-rails"
  gem "factory_girl_rails"
  gem "pry-byebug"
  gem "pry-rails"
  gem "pry-coolline"        #colorize just entered syntax
  gem "rspec-rails", "~> 3.4.0"
end

group :test do
  gem "faker"               # Fake data generator
  gem "capybara-webkit"
  gem "database_cleaner"
  gem "formulaic"
  gem "launchy"
  gem "shoulda-matchers"
  gem "simplecov", require: false
  gem "timecop"
  gem "webmock"
end

group :staging, :production do
  gem "rack-timeout"
end

