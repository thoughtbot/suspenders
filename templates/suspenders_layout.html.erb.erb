  <%%= stylesheet_link_tag :application, media: 'all' %>
  <%%= javascript_include_tag :application, async: true %>
  <%%= yield :javascript %>

  <%% if Rails.env.test? %>
    <%%= javascript_tag do %>
      $.ajaxSetup({ async: false });
    <%% end %>
  <%% end %>

  <%%= csrf_meta_tags %>
</head>
<body class="<%%= body_class %>">
  <%%= render 'flashes' -%>
  <%%= yield %>
</body>
</html>
