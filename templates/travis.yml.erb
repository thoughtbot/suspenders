before_install:
  - "echo '--colour' > ~/.rspec"
  - "echo 'gem: --no-document' > ~/.gemrc"
  - export DISPLAY=:99.0
  - sh -e /etc/init.d/xvfb start
before_script:
  - cp .sample.env .env
  <% if options[:database] == "postgresql" %>
  - psql -c 'create database "<%= app_name %>_test";' -U postgres
  <% end %>
branches:
  only:
    - master
cache:
  - bundler
language:
  - ruby
notifications:
  email:
    - false
rvm:
  - <%= Suspenders::RUBY_VERSION %>
addons:
  postgresql: "9.3"
