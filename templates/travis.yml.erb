before_install:
  - "echo '--colour' > ~/.rspec"
  - "echo 'gem: --no-document' > ~/.gemrc"
  - export DISPLAY=:99.0
  - sh -e /etc/init.d/xvfb start
install:
  - bin/setup
branches:
  only:
    - master
cache:
  directories:
    - vendor/bundle
language:
  - ruby
notifications:
  email: false
rvm:
  - <%= Suspenders::RUBY_VERSION %>
addons:
  postgresql: "9.3"
sudo: false
